{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [".jest/setup.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
